{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@ethernauta/erc",
  "type": "module",
  "version": "0.0.40",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niconiahi/ethernauta"
  },
  "sideEffects": false,
  "exports": {
    "./*": {
      "import": "./dist/*/index.js",
      "types": "./dist/*/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown && biome format --write dist",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@ethernauta/eth": "workspace:*",
    "@ethernauta/abi": "workspace:*",
    "@ethernauta/transport": "workspace:*"
  },
  "peerDependencies": {
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "tsdown": "^0.13.3"
  }
}
