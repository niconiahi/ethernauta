{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@ethernauta/cli",
  "type": "module",
  "version": "0.0.30",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niconiahi/ethernauta"
  },
  "sideEffects": false,
  "bin": {
    "ethernauta": "./dist/bin.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown && biome format --write dist",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@ethernauta/eth": "workspace:*"
  },
  "peerDependencies": {
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsdown": "^0.13.3"
  }
}
