{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@ethernauta/testing",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niconiahi/ethernauta"
  },
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown && biome format --write dist",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "test:unit": "vitest"
  },
  "devDependencies": {
    "tsdown": "^0.13.3",
    "@types/node": "^24.3.0"
  }
}
